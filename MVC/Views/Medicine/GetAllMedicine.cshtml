@model IEnumerable<DataAccessLayer.Models.Medicine>

@{
    ViewData["Title"] = "GetAllMedicine";
}

<h1>GetAllMedicine</h1>

<p>
    <a asp-action="AddMedicine">Add New Medicine</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.ActionLink("Update", "UpdateMedicine", item) |
                @Html.ActionLink("Delete", "DeleteMedicine", item)
            </td>
        </tr>
}
    </tbody>
</table>
